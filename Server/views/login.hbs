<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title> Login </title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="icon" href="images/favicon.ico">
</head>

<body class="mainBody">
  <div class="header">
      <h1>Welcome To Monitor</h1>
      <p>A time management system</p>
  </div>
  <div>
      <ul>
      <li><a href="/">Home</a></li>
      <li><a href="about">About</a></li>
      <li><a href="contact">Contact</a></li>
      <li><a href="dashboard">User Page</a></li>
      <li><a href="register">Register</a></li>
      <li><a href="login">Login</a></li>
      </ul>
  </div>
  <form id="logForm" action="/login" method="post">
    <div>
      <h3 class="title">Login</h3>
    </div>
    <div class="field">
      <label>Username:</label>
      <input type="text" name="username" id="Uname" />
      <br />
    </div>
    <div class="field">
      <label>Password:</label>
      <input type="password" name="password" id="Pass" required />
    </div>
    <div class="field">
      <input class="button" type="submit" value="Login." required />
    </div>
    <label id="error-message"></label>
  </form>

  <script>
    const urlParams = new URLSearchParams(window.location.search);
    const info = urlParams.get('info');

    if(info) {
      const errorMessage = document.getElementById("error-message");
      errorMessage.innerText = info;
      errorMessage.style.display = "block";
    }
  </script>
</body>
</html>